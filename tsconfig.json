{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es6", "es2015.promise", "es2017"],
    "sourceMap": true,
    "baseUrl": "/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "lazy!*": ["src/modules/index/*"]
    }
  },
  "include":["src"],
  "exclude": ["node_modules", "build", "dist"]
}
